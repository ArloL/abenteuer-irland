<?xml version="1.0"?>
<!DOCTYPE project>
<project name="Project Build" basedir="../">
	
    <!-- Use this file to define any custom build targets (for example, automatically deploying via FTP). -->
	
	<!-- PUBLISH -->
	<target name="publish" depends="-publish" />

	<target name="-publish" depends="-clean, -build.production">
		<!-- First set RewriteBase correctly -->
		<replaceregexp file="./${dir.publish}/.htaccess"
		               match="^(.*)RewriteBase .*$"
		               replace="\1RewriteBase ${rewritebase}"
		               byline="true"
		/>
		
		<ftp server="${ftp.server}" userid="${ftp.userid}" password="${ftp.password}" remotedir="${ftp.remotedir}">
			<fileset dir="publish" />
		</ftp>
	</target>

</project>